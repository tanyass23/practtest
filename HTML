      function checkAnswers() {
        let score = 0;
        const form = document.getElementById("taskForm");

        for (let i = 1; i <= 30; i++) {
          const userAnswer = form.elements["q" + i].value.trim();
          const input = form.elements["q" + i];
          const checkIcon = input.parentElement.querySelector(".check-icon");

          input.classList.remove("correct", "incorrect");
          checkIcon.textContent = "";

          if (!userAnswer) continue;

          let isCorrect = false;

          if (Array.isArray(answers["q" + i])) {
            isCorrect = answers["q" + i].includes(userAnswer);
          } else if (answers["q" + i] === "–±—É–¥—å-—è–∫–µ") {
            isCorrect = true;
          } else {
            isCorrect = userAnswer === answers["q" + i];
          }

          if (isCorrect) {
            score++;
            input.classList.add("correct");
            checkIcon.textContent = "‚úì";
            checkIcon.style.color = "#28a745";
          } else {
            input.classList.add("incorrect");
            checkIcon.textContent = "‚úó";
            checkIcon.style.color = "#dc3545";
          }
        }

        const resultDiv = document.getElementById("result");
        let emoji = "";
        let message = "";
        let details = "";

        if (score >= 27) {
          emoji = "üèÜ";
          message = "–§–µ–Ω–æ–º–µ–Ω–∞–ª—å–Ω–æ! –¢–∏ –∞–±—Å–æ–ª—é—Ç–Ω–∏–π –º–∞–π—Å—Ç–µ—Ä –ø–æ–∫–∞–∑–Ω–∏–∫–æ–≤–∏—Ö —Ä—ñ–≤–Ω—è–Ω—å!";
          details = "–¢–≤—ñ–π —Ä—ñ–≤–µ–Ω—å: –ï–ö–°–ü–ï–†–¢";
        } else if (score >= 23) {
          emoji = "üåü";
          message = "–í—ñ–¥–º—ñ–Ω–Ω–æ! –¢–∏ —á—É–¥–æ–≤–æ —Ä–æ–∑—É–º—ñ—î—à –ø–æ–∫–∞–∑–Ω–∏–∫–æ–≤—ñ —Ä—ñ–≤–Ω—è–Ω–Ω—è!";
          details = "–¢–≤—ñ–π —Ä—ñ–≤–µ–Ω—å: –î–û–°–í–Ü–î–ß–ï–ù–ò–ô";
        } else if (score >= 18) {
          emoji = "üëç";
          message = "–î–æ–±—Ä–µ! –ü—Ä–æ–¥–æ–≤–∂—É–π –ø—Ä–∞–∫—Ç–∏–∫—É–≤–∞—Ç–∏—Å—è!";
          details = "–¢–≤—ñ–π —Ä—ñ–≤–µ–Ω—å: –°–ï–†–ï–î–ù–Ü–ô";
        } else if (score >= 12) {
          emoji = "üí™";
          message = "–ù–µ–ø–æ–≥–∞–Ω–æ! –©–µ —Ç—Ä–æ—Ö–∏ –∑—É—Å–∏–ª—å —ñ –±—É–¥–µ –∫—Ä–∞—â–µ!";
          details = "–¢–≤—ñ–π —Ä—ñ–≤–µ–Ω—å: –ü–û–ß–ê–¢–ö–Ü–í–ï–¶–¨";
        } else {
          emoji = "üìö";
          message = "–ù–µ –∑–¥–∞–≤–∞–π—Å—è! –ü–æ–≤—Ç–æ—Ä–∏ —Ç–µ–æ—Ä—ñ—é —ñ —Å–ø—Ä–æ–±—É–π —â–µ —Ä–∞–∑!";
          details = "–¢–≤—ñ–π —Ä—ñ–≤–µ–Ω—å: –ù–û–í–ê–ß–û–ö";
        }

        resultDiv.innerHTML = `
                <div class="score-emoji">${emoji}</div>
                <div>–¢–≤—ñ–π —Ä–µ–∑—É–ª—å—Ç–∞—Ç: ${score} –∑ 30</div>
                <div style="font-size: 0.8em; margin-top: 10px;">${message}</div>
                <div style="font-size: 0.7em; margin-top: 5px; opacity: 0.9;">${details}</div>
            `;
        resultDiv.classList.add("show");
        resultDiv.scrollIntoView({ behavior: "smooth", block: "center" });
      }
    </script>
  </body>
</html>
